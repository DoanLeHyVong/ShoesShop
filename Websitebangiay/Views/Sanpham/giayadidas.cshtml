@using Websitebangiay.Models;
@model List<Sanpham>
<div style=" background-color: forestgreen; padding: 10px;"><a href="/Thuonghieu/xemthuonghieu?Mahang=2" style="color: white; font-size: 20px;"> ADIDAS </a></div>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~" +item.Anhbia.ToString()) class="img-responsive" alt="" width="400" height="400" />
            </a>
            <center>
                <h3>@item.Mota</h3>
                <h3 style="color:red">Giá: @String.Format("{0:0,0}", @item.Giatien) VND</h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" value="Mua hàng" id="bgnGioHang" style="border: 3px solid; padding: 5px;" />

                }
            </center>

        </div>
    }
</div>