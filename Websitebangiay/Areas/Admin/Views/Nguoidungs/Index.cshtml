@model IEnumerable<Websitebangiay.Models.Nguoidung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý người dùng</h2>

<p>
    @*<button class="btn-default"> @Html.ActionLink("Thêm mới", "Create") </button>*@
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Email
        </th>
        <th>
            Điện thoại
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Tên quyền
        </th>
        <th> Hành động</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Hoten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Dienthoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Matkhau)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Diachi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhanQuyen.TenQuyen)
    </td>
    <td>
        @*<button class="btn btn-success">
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNguoiDung }, new { @style = "color:white;" })
        </button>*@
        <button class="btn btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNguoiDung }, new { @style = "color:white;" })
        </button>
        <button class="btn btn-danger">
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaNguoiDung }, new { @style = "color:white;" })
        </button>
    </td>
</tr>
}

</table>
